<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
       <table class="table">
  		  <tbody>
            <tr>
              <td>
                <%#= attachment_image_tag @user, :image,size: '100x100' %>
                <%= attachment_image_tag @user, :image, format: 'jpeg',fallback:"noimage.jpg", size: '100x100' %>
              </td>
            </tr>
            <tr>
              <td>name</td>
              <td><%= @user.name %></td>
            </tr>

            <tr>
              <td>introduction</td>
              <td><%= @user.introduction %></td>
            </tr>
  		  </tbody>
  		 </table>
       <% if @user.id == current_user.id %>
        <div class="row">
          <%= link_to '', edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        </div>
       <% end %>

	  <h2>New book</h2>
        <%= form_for(@post) do |f| %>
          <div class="row">
            <h5>Title</h5>
            <%= f.text_field :title, :size=>"40" %>
          </div>
          <div class="row">
            <h5>Opinion</h5>
            <%= f.text_area :body, :size=>"39" %>
          </div>
          <div class="row">            
            <%= f.submit 'Create Book',class: "btn btn-primary col-xs-12" %>
        ã€€</div>
        <% end %>
</div>
   <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>Title</th>

          <th>Opinion</th>

          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
         <% @posts.each do |post| %>
            <tr>
              <td>
                <%= attachment_image_tag post.user, :image, format: 'jpeg',fallback:"noimage.jpg", size: '50x50' %>
              </td>
              <td><%= link_to post.title, post_path(post) %></td>
              <td><%= post.body %></td>
            </tr>
          <% end %>

      </tbody>
    </table>
  </div>
</div>
